      width: 100%;
      padding: 1rem 0rem;

      .go-cart-drawer__header-top {
        display: table;
        padding: 0 30px 10px;
        
      .drawer__title {
        text-transform: capitalize;
        font-size: 1rem;
        color: #000;
        font-family: Poppins,sans-serif;
        font-weight: 700;
        letter-spacing: .66px;
        line-height: 26px;
        margin-bottom: 20px;
        width: 100%;
        font-size: 1rem;
        display: table-cell;
        vertical-align: middle;
        cursor: pointer;
      }
      
      .drawer__cart-icon {
        
        display: table-cell;
        vertical-align: middle;
        width: 10%;
        color: #000;
        opacity: 1;
        font-weight: 600;
        position: relative;
        /* padding-left: 20px; */
        padding-right: 20px;
        font-family: Poppins,sans-serif;
        
        .fa-shopping-cart {
           opacity: 1;
        }
        .js-go-cart-counter {

          position: absolute;
          right: 6px;
          top: 0;
          font-size: 10px;
          color: #627e92;
          padding: 2px 6px;
          border-radius: 50%;
          background: #e3ecf2;
        }
      }  
        
      .js-go-cart-drawer-close {
          width: 1%;
          text-align: center;
          font-size: 1.28571em;
          display: table-cell;
          vertical-align: middle;

          font-size: 14px;
          border-radius: 0;
          border: 1px solid #fff;
