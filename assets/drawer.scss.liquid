
body {
  &.openCart {
    overflow: hidden;
  }
}



$drkBlue: #033047;

/* OVERLAY */
.go-cart__overlay {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.4);
  transition: all 0.3s ease-in-out;
  opacity: 0;
  visibility: hidden;
  backface-visibility: hidden;
  &.is-open {
    opacity: 1;
    visibility: visible;
  }
}

/* END OVERLAY */

.go-cart__drawer .sideCartWrapper {
    position: relative;
    height: 100%;
}


.go-cart__drawer .go-cart-drawer {
    padding: 1rem;
    padding-bottom: 100px;
    flex: 1 1 auto;
    overflow: auto;
}

.go-cart__drawer .drawer__footer {
	-webkit-box-flex: 0;
	-ms-flex: none;
	flex: none;
}


.go-cart__drawer {

  position: fixed;
  top: 0;
  right: -500px;
  z-index: 9999999;
  width: 100%;
  max-width: 500px;
  height: 100%;
  background-color: #ffffff;
  transition: all 0.3s ease-in-out;
  backface-visibility: hidden;

  /*padding: 0 30px 30px 30px;*/
  color: #333;
  /*overflow: hidden;
  overflow: auto;*/
  
  font-family: Poppins,sans-serif;

  @media screen and (max-width:767px) {
    width: 100%;
  }

  &.is-open {
  transform: translateX(-500px);

  }

  .go-cart-drawer {

    position: relative;
    padding: 0 30px 30px 30px;
    /*height: 100%;*/
    @media screen and (max-width:767px) {
      padding: 0 15px;
    }

  }
  
  p {
    font-family: Poppins,sans-serif;
    font-size: 18px;
  }
  button {
	font-size: 14px;
    padding: 8px 16px;
    border-radius: 0;
    border: 1px solid #fff;
    color: #fff;
    background: 0 0;
    transition: all .1s ease-in-out;
    -webkit-transition: all .1s ease-in-out;
    -moz-transition: all .1s ease-in-out;
    -o-transition: all .1s ease-in-out;
    display: inline-block;
  }
  input {
	border: 1px solid #000;
    opacity: 0.6;
    border-radius: 5px;
    /*max-width: 100%;
    padding: 4px 10px;*/
    /*width: 50px;*/
    width: 100%;
    
    @media screen and (max-width:767px) {
      font-size: 14px;
    }
  }
  
  i {
    opacity: 0.4;
  }


  .go-cart__button {
    background: black;
    color: white;
    padding: 20px 10px;
    text-align: center;
    cursor: pointer;
  }


