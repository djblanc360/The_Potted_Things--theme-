$drkblue: #627E92;
$ltblue: #E3ECF2;

.product {
	main {
		padding-top: 80px;
		#pdp-more-collection {
			background-size: cover;
			background-position: center;
			position: relative;
			.container {
				position: relative;
				z-index: 2;
				h2, .more {
					color: #fff;
				}
				.shopCollItem {
					background-color: #fff;
					padding: 15px;
					margin: 7px;
				}
			}
			.cover {
				position: absolute;
				top: 0; right: 0; bottom: 0; left: 0;
				background-color: rgba(0,0,0,0.4);
				z-index: 1;
			}
		}
      
      .breadcrumbs{
        text-transform: uppercase;
        font-size: 11px;
        font-weight: 300;
        a{
          color: #000;
          font-size: 11px;
          font-weight: 300;
        }
      }
	}
  	
  .favoriteBtn{
    margin-bottom: 45px;
    i{
      font-size: 24px;
      &:hover{
        cursor: pointer;
      }
    }
  }
  
 .quickShopVariantImg{
   &:hover{
     cursor: pointer;
   }
   
   &.active{
     border: 1px solid #000;
   }
 }
}