$grnblack: #021E2A;
$drkgreen: #4C5D59;
$ltgreen: #A3B4B1;
$grnwhite: #E7F0EF;
$white: #F5FAF8;

// GENERAL
body {
  font-family: 'Montserrat', sans-serif;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  font-family: 'Poppins', sans-serif;
}

img {
  display: block;
  max-width: 100%;
}

input[type="text"], input[type="email"], input[type="url"], input[type="tel"], textarea {
  padding: 10px 25px;
  border-radius: 5px;
  border: 0;
  background-color: #ffffff;
}

section {
  padding-top: 100px;
  padding-bottom: 100px;
  @media screen and (max-width:767px) {
    padding-top: 50px;
    padding-bottom: 50px;
  }
}


.btn {
  font-weight: bold;
  text-transform: uppercase;
  padding: 10px 25px;
  border-radius: 5px;
  border: 0;
  display: inline-block;
  &.btn-primary {
    color: #fff;
    background-color: #000;
  }
  &.btn-secondary {
    color: #000;
    background-color: #fff;
  }
  &.btn-blue {
    color: $drkgreen;
    background-color: $ltgreen;
  }
  &.btn-cta {
    color: #fff;
    background-color: $drkgreen;
  }
}

// header menu

#header {
  position: fixed;
  width: 100%;
  z-index: 9999998;
	
  #navbar {
    background-color: transparent;
    transition: all .3s ease-in-out;
    
    #desktopMainHeader {
      display: none;
      @media screen and (min-width:1199px) {
        display: initial;
        .container-fluid {
          padding-left: 50px;
          padding-right: 50px;
        }
        .desktopMainNav {
          ul {
            li.list-inline-item {
              margin-right: 0 !important;
              a {
                letter-spacing: 0.04rem;
                border-bottom: 2px solid transparent;
                display: inline-block;
                padding: 36px 24px;
                font-size: 17px;
                &:hover, &.hover {
                  border-bottom-color: $drkgreen;
                }
                &.mainMenuHoverState {
                  border-bottom-color: $drkgreen;
                }
              }
            }
          }
        }
        .deskMenuTopRight {
          li {
            margin-right: 0 !important;
            a, button {
              display: inline-block;
              border: 0;
              background-color: transparent;
              padding: 20px 25px;
              &:focus, &:active { outline: 0; }
              img {
                filter: invert(0%);
                &.darkMode {
                  filter: invert(100%);
                }
              }
            }
          }
        }
      }
    }
  }
  
  
}


.slideOutCover {
	opacity: 0;
	transition: all .3s ease-in-out;
	background-color: rgba(82,30,57,0.4);
	position: absolute;
	z-index: 9;
	top: 0; right: 0; bottom: 0; left: 0;
	display: none;
	&.slideOutCoverActive { display: initial; opacity: 1; z-index: 9999998; }
}

// product grid item
.prodGridItem {
  position: relative;
  .bundleCover {
    position: absolute;
    top: 0; right: 0; bottom: 0; left: 0;
    z-index: 1;
    opacity: 0;
    transition: opacity .15s ease-in-out;
    background-color: rgba(255,255,255,0.8);
    .bundleCoverInner {
      width: 100%;
      .btn {
        border: 2px solid #000;
      }
    }
  }

  .first-img{ opacity: 1; }
  .second-img{ opacity: 0; }

  .prodGridImg:hover{
    .first-img{ opacity: 0;}
    .second-img{ opacity: 1; }
  }

  .second-img{
    z-index: 0;
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
  }


  .prodGridText {
    min-height: 75px;
  }
  .prodGridCat {
    text-transform: uppercase;
    font-size: 0.6rem;
  }
  .prodGridTitle {
    line-height: 18px;
    a {
      font-weight: 800;
      color: #000;
      text-decoration: none;
    }
  }
  .prodGridStarting {
    text-transform: uppercase;
    font-size: 0.6rem;
  }
  .prodGridPrice {

  }
  .prodGridCTA {
    .btn {
      width: 100%;
    }
  }
  &:hover {
    .bundleCover {
      opacity: 1;
    }
  }
}
