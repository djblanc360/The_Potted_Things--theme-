      <div id="desktopProductHeader">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-2">
                <div class="h-100 d-flex align-items-center">
                  <a href="/" title="Home" class=" desktopProductHeaderLogo py-4">Logo</a>

              </div>
            </div>
            <div class="col-sm-10">
               <div class="desktopProductNav">
                <div class="row h-100">
                  <div class="col-sm-11 d-flex align-items-center justify-content-end pr-0">
                    <form class="addCart" action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm" data-productid="{{product.id}}">
                        

                        <select name="id" id="productSelect" data-productid="{{product.id}}">
                          {% for variant in product.variants %}
                            {% if variant.available %}
                              <option value="{{ variant.id }}">
                                {{ variant.title }} - {{ variant.price | money_with_currency }}
                              </option>
                            {% else %}
                              <option disabled="disabled">
                                {{ variant.title }} - sold out
                              </option>
                            {% endif %}
                          {% endfor %}
                        </select>

                        <div class="">
                          <span>{{ current_variant.price | money }}</span>
                        </div>
                        

                        <!--<label for="Quantity">quantity</label>-->
                        <input style="visibility:hidden;" type="number" id="Quantity" name="quantity" value="1" min="1">
                        
                        <button type="submit" name="add" id="AddToCart" class="btn btnMain">Add to cart</button>
                      </form>
                    </div>
                    <div class="col-sm-1 d-flex align-items-center justify-content-center pl-0">
                      <button class="p-2 d-flex align-items-center h-100 openCart">
                        <i class="fas fa-shopping-cart"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  
      <div id="mobileAddToCart">
        
        
