<section id="header"> 
    <div id="navbar" class="p-0">

      <div id="mobileMainHeader">
        <div class="container">
          <div class="row">
            
          </div>
        </div>
      </div>

      <div id="desktopMainHeader">
        <div class="container-fluid">
          <div class="row">
            
          </div>
        </div>
      </div>

    </div>
{% if template == 'product' %}  
    <div id="productNav" class="hide">
      <div id="mobileProductHeader">
        <div class="container-fluid">
          <div class="row">
            <div class="col-3 d-flex align-items-center justify-content-start">
              <button class="mobileNavLinkContainer mobileMenuOpenLink p-2 d-flex align-items-center h-100">
                <img class="mobileMainHeaderIcon mobileMainHeaderIconBars lazyload" data-src="https://cdn.shopify.com/s/files/1/0444/2990/1988/files/menu.svg" alt="Kindra Mobile Menu">
              </button>
            </div>
            <div class="col-6 d-flex align-items-center justify-content-center">
              <a href="/" title="Kindra Home">
                <img class="lazyload" data-src="https://cdn.shopify.com/s/files/1/1600/4387/files/Kindra_Logo_Black_1.svg" alt="Kindra Logo">
              </a>
            </div>
            <div class="col-3 d-flex align-items-center justify-content-end">
              <button class="mobileNavLinkContainer p-2 d-flex align-items-center h-100 openCart">
                <img class="mobileMainHeaderIcon lazyload" data-src="https://cdn.shopify.com/s/files/1/1600/4387/files/cart.svg" alt="Kindra Cart">
                <span class="cart-count count-header">{% if cart.item_count > 0 %}{{ cart.item_count }}{% endif %}</span>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div id="desktopProductHeader">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-2">
                <div class="h-100 d-flex align-items-center">
                  <a href="/" title="Kindra Home" class=" desktopProductHeaderLogo py-4"><img class="lazyload" data-src="https://cdn.shopify.com/s/files/1/1600/4387/files/Kindra_Logo_Black_1.svg" alt="Kindra Logo"></a>

              </div>
            </div>
            <div class="col-sm-10">
               <div class="desktopProductNav">
                <div class="row h-100">
                  <div class="col-sm-11 d-flex align-items-center justify-content-end pr-0">
                    <form class="addCart" action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm" data-productid="{{product.id}}">
                        {% if product.available %}{% include 'subscription-product' %}{% endif %}

                        <select name="id" id="productSelect" data-productid="{{product.id}}">
                          {% for variant in product.variants %}
                            {% if variant.available %}
                              <option value="{{ variant.id }}">
                                {{ variant.title }} - {{ variant.price | money_with_currency }}
                              </option>
                            {% else %}
                              <option disabled="disabled">
                                {{ variant.title }} - sold out
                              </option>
                            {% endif %}
                          {% endfor %}
                        </select>

                        <div class="">
                          <span>{{ current_variant.price | money }}</span>
                        </div>
                        

                        <!--<label for="Quantity">quantity</label>-->
                        <input style="visibility:hidden;" type="number" id="Quantity" name="quantity" value="1" min="1">
                        
                        <button type="submit" name="add" id="AddToCart" class="btn btnMain">Add to cart</button>
                      </form>
                    </div>
                    <div class="col-sm-1 d-flex align-items-center justify-content-center pl-0">
                      <button class="p-2 d-flex align-items-center h-100 openCart">
                        <img class="mobileMainHeaderIcon lazyload" data-src="https://cdn.shopify.com/s/files/1/1600/4387/files/cart.svg" alt="Kindra Cart">
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  
      <div id="mobileAddToCart">
        {% if product.metafields.subscriptions.subscription_id  %}
        
        <button type="submit" name="add" id="buyNow" class="btn btnMain">Buy Now</button>
        
        <div id="mobileAddDash" class="container hide px-2">
          <button id="closeDash">
            <img class="lazyload" data-src="https://cdn.shopify.com/s/files/1/1600/4387/files/icon_close.svg?v=1603484701" alt="Close Mobile Buy Menu">
          </button>
          <div class="row">
            <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm" data-productid="{{product.id}}">
                {% if product.available %}{% include 'subscription-product' %}{% endif %}

                <select name="id" id="productSelect" data-productid="{{product.id}}">
                  {% for variant in product.variants %}
                    {% if variant.available %}
                      <option value="{{ variant.id }}">
                        {{ variant.title }} - {{ variant.price | money_with_currency }}
                      </option>
                    {% else %}
                      <option disabled="disabled">
                        {{ variant.title }} - sold out
                      </option>
                    {% endif %}
                  {% endfor %}
                </select>

                <div class="">
                  <span>{{ current_variant.price | money }}</span>
                </div>
                

                <!--<label for="Quantity">quantity</label>-->
                <input style="visibility:hidden;" type="number" id="Quantity" name="quantity" value="1" min="1">
              
              <button type="submit" name="add" id="AddToCart" class="btn btnMain">Add to cart &mdash; <span id="dynamicPrice" class="price">{{ product.price | money }}</button>
            </form>
                   
          </div>
        </div>

        {% else %}
        
        <div class="container px-2">
          <div class="row">
            <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm" data-productid="{{product.id}}">
                {% if product.available %}{% include 'subscription-product' %}{% endif %}

                <select name="id" id="productSelect" data-productid="{{product.id}}">
                  {% for variant in product.variants %}
                    {% if variant.available %}
                      <option value="{{ variant.id }}">
                        {{ variant.title }} - {{ variant.price | money_with_currency }}
                      </option>
                    {% else %}
                      <option disabled="disabled">
                        {{ variant.title }} - sold out
                      </option>
                    {% endif %}
                  {% endfor %}
                </select>

                <div class="">
                  <span>{{ current_variant.price | money }}</span>
                </div>
                

                <!--<label for="Quantity">quantity</label>-->
                <input style="visibility:hidden;" type="number" id="Quantity" name="quantity" value="1" min="1">
              
              <button type="submit" name="add" id="AddToCart" class="btn btnMain">Add to cart &mdash; <span id="dynamicPrice">{{ product.price | money }}</button>
            </form>
                   
          </div>
        </div>

        {% endif %}

      </div>  
{% endif %}
</section>

